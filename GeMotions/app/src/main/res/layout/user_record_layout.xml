<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_popup_background"> <!-- Applica lo sfondo arrotondato -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:padding="7dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:gravity="start"/>

    <RelativeLayout
        android:id="@+id/audioPlayerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_play"
            android:layout_centerVertical="true"/>

        <!-- Duration Text -->
        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <!-- SeekBar for Playback Progress -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/playPauseButton"
            android:layout_toStartOf="@id/durationTextView"
            android:layout_centerVertical="true"
            android:progressBackgroundTint="#FFFFFF"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <TextView
            android:id="@+id/emotionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPPY"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:visibility="visible"/>
    </RelativeLayout>


</LinearLayout>